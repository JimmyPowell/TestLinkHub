# This is an example configuration file.
# DO NOT COMMIT YOUR SECRETS.
# Copy this file to 'application.properties' and fill in your actual values.
# 'application.properties' is ignored by git.

spring.application.name=backend
server.port=8087

# ====================================================================
# DATASOURCE
# ====================================================================
spring.datasource.url=jdbc:mysql://localhost:3306/test_link_hub?useUnicode=true&characterEncoding=utf-8
spring.datasource.username=your_db_username
spring.datasource.password=your_db_password

# ====================================================================
# REDIS
# ====================================================================
spring.data.redis.host=127.0.0.1
spring.data.redis.port=6379
spring.data.redis.password=

# ====================================================================
# EMAIL (QQ Mail Configuration)
# ====================================================================
spring.mail.host=smtp.qq.com
spring.mail.port=465
spring.mail.username=your_email@qq.com
spring.mail.password=your_qq_mail_auth_code
spring.mail.protocol=smtp
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.ssl.enable=true
spring.mail.properties.mail.smtp.ssl.protocols=TLSv1.2

# ====================================================================
# Jackson Naming Strategy
# ====================================================================
spring.jackson.property-naming-strategy=SNAKE_CASE

# ====================================================================
# MyBatis Configuration
# ====================================================================
mybatis.configuration.map-underscore-to-camel-case=true
mybatis.type-handlers-package=tech.cspioneer.backend.config.typehandler

# ====================================================================
# JWT Configuration
# ====================================================================
jwt.secret=your-super-secret-key-that-is-long-and-secure
jwt.access-token-expiration-ms=3600000 # 1 hour
jwt.refresh-token-expiration-ms=604800000 # 7 days

# ====================================================================
# OSS Configuration
# ====================================================================
oss.endpoint=
oss.region=
oss.endpointSts=
oss.accessKeyId=
oss.accessKeySecret=
oss.accessKeyIdRam=
oss.accessKeySecretRam=
oss.bucketName=
oss.roleArn=
oss.roleSessionName=
oss.durationSeconds=3600
